.SUFFIXES: .cc .cxx .cpp .C .c .o .h .x10

.x10.cc:
	$(RM) $@
	$(X10CXX) $(X10CXXFLAGS) -d . -c $<

.cc.o:
	$(RM) $@
	$(CXX) $(CXXFLAGS) $(DEFS) $(INCLUDES) -c $< -o $@

.cxx.o:
	$(RM) $@
	$(CXX) $(CXXFLAGS) $(DEFS) $(INCLUDES) -c $< -o $@

.cpp.o:
	$(RM) $@
	$(CXX) $(CXXFLAGS) $(DEFS) $(INCLUDES) -c $< -o $@

.C.o:
	$(RM) $@
	$(CXX) $(CXXFLAGS) $(DEFS) $(INCLUDES) -c $< -o $@

.c.o:
	$(RM) $@
	$(CC) $(CCFLAGS) $(DEFS) $(INCLUDES) -c $< -o $@
