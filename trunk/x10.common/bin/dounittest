#!/bin/sh
# DO NOT EDIT - This file was automatically generated.

JAVA='/home/praun/sw/java/bin/java'
FILE_SEP='/'
PATH_SEP=':'
TOP='/home/praun/workspace_x10/x10.examples'
X10_PLATFORM='linux_x86'
    
ext=""


#
# $Id: dounittest.in,v 1.2 2004/09/15 23:16:22 praun Exp $
#
# Copyright (C) 2004 by IBM
# All rights reserved
#
# Purpose:
#      Script that calls unit test with JUnit.
#
# 09/15/04  cvp
#

while true; do
    case "$1" in
        "") break;;
        *) args="$args '$1'"; shift;;
    esac
done

if [ -z "$args" ]
then
    echo "dounittest: You must provide an argument that specifies the class to be tested."
    exit 1
fi

# choose text or graphical output
interface="junit.textui.TestRunner"
# interface="junit.awtui.TestRunner"
# interface="junit.swingui.TestRunner"

classpath="${TOP}${FILE_SEP}classes${PATH_SEP}${TOP}${FILE_SEP}tools${FILE_SEP}junit${FILE_SEP}junit.jar"
command="\"$JAVA\" $profile -classpath \"$classpath\" $interface $args"

if [ -n "$verbose" ]
then
  echo "$command"
fi

eval "$command" || exit 1

