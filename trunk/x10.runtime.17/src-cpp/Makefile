#Configurable:

CXX?=g++ #for sane people
AR?=ar

X10LIB?=../../pgas/common/work
CXXFLAGS=-ansi -pedantic -Wall -Wextra
INCLUDE_DIRS+=-I$(X10LIB)/include -I.
CXXFLAGS+=$(INCLUDE_DIRS)
ifneq ($(wildcard /usr/include/lapi.h),) # AIX
CXX = mpCC_r
override CXXFLAGS -= -g
override CXXFLAGS += -q64
override CXXFLAGS += -O3 -qinline -qarch=pwr5 -qtune=pwr5 -qhot
override CXXFLAGS += -qrtti=all -DNDEBUG
# FIXME
ARFLAGS := -X64 $(ARFLAGS)
endif


#Target:

ARCHIVE=libx10rt17.a

all: $(ARCHIVE)

ALL_OBJECTS = \
        x10/lang/String.o \
        x10/lang/Ref.o \
        x10/lang/Value.o \
        x10/lang/Object.o \
        x10aux/place.o \
        x10aux/runtime.o \
        x10aux/string_utils.o \
        x10aux/finish.o \
        x10aux/exit_code.o \
        x10aux/RTT.o \

$(ARCHIVE): $(ALL_OBJECTS)
	$(AR) $(ARFLAGS) $@ $^


#Standard stuff:

%.o: %.cc $(wildcard %.h)
	$(CXX) $(CXXFLAGS) -c $< -o $@

depend:
	find -name '*.cc' | xargs makedepend -Y $(INCLUDE_DIRS) -f depend.mk 


clean:
	find -name '*.h.gch' -o -name '*.o' | xargs rm -vf
	rm -fv $(ARCHIVE)

squeakyclean: clean
	find -name '*~' -o -name '*.bak' | xargs rm -vf

.PHONY: all clean squeakyclean


#Optional file -- generated by makedepend (run "make depend").
-include depend.mk

