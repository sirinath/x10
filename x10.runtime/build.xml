<project name="x10.runtime" default="build" basedir=".">
    &buildfile;
    <property name="container_loc" value="."/>
    <property name="pe.location" value="../pe"/>
    <property name="resource_name" value="x10.compiler"/>
    <property name="x10.common.location" value="../x10.common"/>
    <path id="project.classpath">
        <path refid="mainproject.classpath"/>
        <path refid="pe.classpath"/>
        <path refid="x10.common.classpath"/>
    </path>
    <path id="mainproject.classpath">
        <pathelement location="classes"/>
    </path>
    <path id="pe.classpath">
        <pathelement location="${pe.location}/classes"/>
        <pathelement location="${pe.location}/lib/PE.jar"/>
    </path>
    <path id="x10.common.classpath"/>
    <target name="init">
        <mkdir dir="classes"/>
    </target>
    <target name="clean">
        <delete dir="classes"/>
    </target>
    <!-- uncomment the following line (and comment out the next one) to build LAPI -->
    <!-- target name="build" depends="init,lapi-support" -->
    <target name="build" depends="init">
        <ant antfile="${pe.location}/build.xml" inheritAll="false"/>
        <ant antfile="${x10.common.location}/build.xml" inheritAll="false"/>
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac destdir="classes" source="1.4" target="1.4">
            <src path="src"/>
            <classpath refid="project.classpath"/>
        </javac>
    </target>
    <!-- the following lines have only ever been tested on AIX -->
    <!-- they build the LAPI support library -->
    <target name="lapi-support" depends="declareLAPISupportTask">
	<exec dir="lapi_support" executable="/usr/bin/ksh">
	   <arg line="buildLAPISupport.ksh"/>
	</exec>
    </target>
    <!-- the preceding lines have only ever been tested on AIX -->
</project>
