import harness.x10Test;;

/**
 * Casting nullable String to String should not cause
 * exception when the value is not null
 */
public class Nullable2 extends x10Test {
	var gotNull: boolean;
	public def run(): boolean = {
		gotNull = false;
		try {
			var x: nullable<String> = "May the force be with you!";
			var y: String = X.chkForNull(x);
			X.use(y);
		} catch (var e: ClassCastException) {
			gotNull = true;
		}
		return !gotNull;
	}

	public static def main(var args: Rail[String]): void = {
		new Nullable2().execute();
	}

	// to make optimizations difficult
	static class X {
		public static def use(var y: String): void = { }

		public static def chkForNull(var x: nullable<String>): String = {
			return (String)x;
		}
	}
}
