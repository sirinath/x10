/**
 * Testing arrays of future<T>.
 *
 * @author kemal, 5/2005
 */
public class ArrayFutureFlatten extends x10Test {

	public def run(): boolean = { 
		var A: Array[int] = new Array[int]([1..10, 1..10]);
		final val B: Array[int] = new Array[int]([1..10, 1..10]);
		var b: int = future { 3 } .force();
		chk(0 == future {B(1, 1)}.force());
		return true;
	}
	

	public static def main(var args: Rail[String]): void = {
		new ArrayFutureFlatten().execute();
	}
}
