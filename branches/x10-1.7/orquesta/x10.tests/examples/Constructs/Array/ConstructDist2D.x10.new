import harness.x10Test;;

/**
 * Tests 2D distributions constructed from regions.
 */
public class ConstructDist2D extends x10Test {

	public def run(): boolean = {
		var e: region{rank==1} = [1..10];
		var r: region = [e, e];
		var d: dist = Dist.makeConstant(r, here);
		return d.equals(Dist.makeConstant([1..10, 1..10], here));
	}

	public static def main(var args: Rail[String]): void = {
		new ConstructDist2D().execute();
	}
}
