\newcommand\EnrichEnvironment[2]{
    \newenvironment{#1}[1][\relax]{
        \ifx##1\relax
           \begin{#2}%
        \else
          \begin{#2}[##1]%
        \fi
         \renewcommand\setcaption[2][\relax]{
           \ifx####1\relax
                \renewcommand\usecaption{\caption{####2}}%
