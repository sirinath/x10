\def\NewDivision#1#2{%
    \expandafter
        \newcommand
            \csname%
                #1%
            \endcsname[2][\relax]%
        {%
            \lowercase{\csname#1\endcsname}{##2}%
            \ifx##1\relax
                \label{#2:##2}
            \else
                \label{#2:##1}%
            \fi
        }%
}

