<?xml version="1.0" encoding="UTF-8"?>
<project name="com.ibm.wala.cast.x10" default="jar" basedir=".">
    <property name="build" location="${basedir}/bin"/>
    <property name="src" location="${basedir}/src"/>
    <property name="lib" location="${basedir}/lib"/>
    <property name="jar" value="com.ibm.wala.cast.x10.jar"/>
    <path id="project.classpath">
        <path refid="mainproject.classpath"/>
        <path refid="compiler.classpath"/>
        <path refid="lib.classpath"/>
    </path>
    <path id="mainproject.classpath">
        <pathelement location="${build}"/>
    </path>
    <path id="compiler.classpath">
        <pathelement location="${basedir}/../x10.compiler/classes"/>
    </path>
    <path id="lib.classpath">
        <pathelement path="${basedir}/lib/wala.jar"/>
        <pathelement path="${basedir}/lib/org.eclipse.core.runtime_3.6.0.v20100505.jar"/>
        <pathelement path="${basedir}/lib/org.eclipse.osgi_3.6.0.v20100517.jar"/>
        <pathelement path="${basedir}/lib/org.eclipse.equinox.common_3.6.0.v20100503.jar"/>
        <pathelement path="${basedir}/lib/org.eclipse.core.jobs_3.5.0.v20100515.jar"/>
        <pathelement path="${basedir}/lib/org.eclipse.core.runtime.compatibility.registry_3.3.0.v20100520/runtime_registry_compatibility.jar"/>
        <pathelement path="${basedir}/lib/org.eclipse.equinox.registry_3.5.0.v20100503.jar"/>
        <pathelement path="${basedir}/lib/org.eclipse.equinox.preferences_3.3.0.v20100503.jar"/>
        <pathelement path="${basedir}/lib/org.eclipse.core.contenttype_3.4.100.v20100505-1235.jar"/>
        <pathelement path="${basedir}/lib/org.eclipse.equinox.app_1.3.0.v20100512.jar"/>
    </path>
    <!-- get the environment variables -->
    <property environment="env"/>
    <target name="init">
        <tstamp/>
        <mkdir dir="${build}"/>
    </target>
    <target name="clean">
        <delete dir="${build}" failonerror="false"/>
    </target>
    <target name="check-jar" depends="init">
        <fileset id="classes" dir="${build}" includes="com/**" excludes="${jar}"/>
    </target>
    <target name="jar" depends="build,check-jar">
        <jar jarfile="${build}/${jar}">
            <fileset refid="classes"/>
        </jar>
    </target>
    <target name="build" depends="init">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac destdir="${build}" source="1.5" target="1.5" debug="on" includes="com/**">
            <src path="${src}"/>
            <classpath refid="project.classpath"/>
        </javac>
        <copy todir="${build}">
            <fileset dir="." includes="data/**"/>
        </copy>
    </target>
</project>
