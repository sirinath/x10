#!/bin/bash

SIZE=$((1024*1024))

X10_NPLACES=1     x10 -cp stream.jar Stream $SIZE 2>&1 | tee -a log.stream.managed.00001
X10_NPLACES=8     x10 -cp stream.jar Stream $SIZE 2>&1 | tee -a log.stream.managed.00008

exit 0

