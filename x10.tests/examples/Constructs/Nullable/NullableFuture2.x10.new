import harness.x10Test;;

/**
 * Converting nullable future int to future int causes
 * exception when value is null.
 */
public class NullableFuture2 extends x10Test {
	public def run(): boolean = {
		var gotNull: boolean = false;
		var x: nullable<future<int>>;
		if (!X.t()) {
			x = future { 42 };
		} else {
			x = null;
		}
		try {
			X.use(((future<int>)x).force());
		} catch (var e: ClassCastException) {
			gotNull = true;
		}
		return gotNull;
	}

	public static def main(var args: Array[String](1)): void = {
		new NullableFuture2().execute();
	}

	static class X {
		public static def t(): boolean = { return true; }
		public static def use(var x: int): void = { }
	}
}
