import harness.x10Test;;

/**
 * Casting nullable String to String when value is null
 * should cause a class cast exception
 */
public class Nullable1 extends x10Test {
	public def run(): boolean = {
		var gotNull: boolean = false;
		try {
			var x: nullable<String> = null;
			var y: String = (String)x;
			X.use(y);
		} catch (var e: ClassCastException) {
			gotNull = true;
		}
		return gotNull;
	}

	public static def main(var args: Array[String](1)): void = {
		new Nullable1().execute();
	}

	static class X {
		public static def use(var y: String): void = { }
	}
}
