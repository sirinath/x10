package jgfutil;


/**
  * X10 port of montecarlo benchmark from Section 2 of Java Grande Forum Benchmark Suite (Version 2.0)
  *
  * @author Vivek Sarkar (vsarkar@us.ibm.com)
  *
  * Porting issues identified:
  * 1) Extend x10.lang.Object
  */
    
import java.util.*;;

  public class JGFInstrumentor {

  private const timers: Hashtable;
  private const data: Hashtable; 

  static {
    timers = new Hashtable();
    data = new Hashtable(); 
  }

  public atomic static def addTimer(var name: String): void {

    if (timers.containsKey(name)) {
      System.out.println("JGFInstrumentor.addTimer: warning -  timer " + name + 
			 " already exists");
    }
    else {
      timers.put(name, new JGFTimer(name));
    }
  }
    
  public atomic static def addTimer(var name: String, var opname: String): void = {

    if (timers.containsKey(name)) {
      System.out.println("JGFInstrumentor.addTimer: warning -  timer " + name + 
			 " already exists");
    }
    else {
      timers.put(name, new JGFTimer(name,opname));
    }
    
  }

  public atomic static def addTimer(var name: String, var opname: String, var size: int): void = {

    if (timers.containsKey(name)) {
      System.out.println("JGFInstrumentor.addTimer: warning -  timer " + name +
                         " already exists");
    }
    else {
      timers.put(name, new JGFTimer(name,opname,size));
    }

  }

  public atomic static def startTimer(var name: String): void = {
    if (timers.containsKey(name)) {
      ((JGFTimer) timers.get(name)).start();
    }
    else {
      System.out.println("JGFInstrumentor.startTimer: failed -  timer " + name + 
			 " does not exist");
    }

  }

  public atomic static def stopTimer(var name: String): void = {
    if (timers.containsKey(name)) {
      ((JGFTimer) timers.get(name)).stop();
    }
    else {
      System.out.println("JGFInstrumentor.stopTimer: failed -  timer " + name + 
			 " does not exist");
    }
  }

  public atomic static def addOpsToTimer(var name: String, var count: double): void = {
    if (timers.containsKey(name)) {
      ((JGFTimer) timers.get(name)).addops(count);
    }
    else {
      System.out.println("JGFInstrumentor.addOpsToTimer: failed -  timer " + name + 
			 " does not exist");
    }
  }  

  public atomic static def readTimer(var name: String): double = {
    var time: double; 
    if (timers.containsKey(name)) {
      time = ((JGFTimer) timers.get(name)).time;
    }
    else {
      System.out.println("JGFInstrumentor.readTimer: failed -  timer " + name + 
			 " does not exist");
       time = 0.0; 
    }
    return time; 
  }  

  public atomic static def resetTimer(var name: String): void = {
    if (timers.containsKey(name)) {
      ((JGFTimer) timers.get(name)).reset();
    }
    else {
      System.out.println("JGFInstrumentor.resetTimer: failed -  timer " + name +
 			 " does not exist");
    }
  }
  
  public atomic static def printTimer(var name: String): void = {
    if (timers.containsKey(name)) {
      ((JGFTimer) timers.get(name)).print();
    }
    else {
      System.out.println("JGFInstrumentor.printTimer: failed -  timer " + name +
 			 " does not exist");
    }
  }
  
  public atomic static def printperfTimer(var name: String): void = {
    if (timers.containsKey(name)) {
      ((JGFTimer) timers.get(name)).printperf();
    }
    else {
      System.out.println("JGFInstrumentor.printTimer: failed -  timer " + name +
 			 " does not exist");
    }
  }
  
  public atomic static def storeData(var name: String, var obj: x10.lang.Object): void = {
    data.put(name,obj); 
  }

  public atomic static def retrieveData(var name: String, var obj: x10.lang.Object): void = {
      obj = (x10.lang.Object) data.get(name); 
  }
  
  public atomic static def printHeader(var section: int, var size: int): void = {
  	printHeader(section, size, 1);
  }

  public atomic safe static def printHeader(var section: int, var size: int, var nthreads: int): void = {

    var header: String;
    var base: String;

    header = "";
    base = "Java Grande Forum Thread Benchmark Suite - Version 1.0 - Section ";

    switch (section) {
    case 1:case 1:
      header = base + "1";
      break;
    case 2:case 2:
      switch (size) {
      case 0:case 0:
        header = base + "2 - Size A";
        break;
      case 1:case 1:
        header = base + "2 - Size B";
        break;
      case 2:case 2:
        header = base + "2 - Size C";
        break;
      }
      break;
    case 3:case 3:
      switch (size) {
      case 0:case 0:
        header = base + "3 - Size A";
        break;
      case 1:case 1:
        header = base + "3 - Size B";
        break;
      }
      break;
    }

    System.out.println(header);

    if (nthreads == 1) {
      System.out.println("Executing on " + nthreads + " thread");
    }
    else {
      System.out.println("Executing on " + nthreads + " threads");
    }

    System.out.println("");

  }

}
